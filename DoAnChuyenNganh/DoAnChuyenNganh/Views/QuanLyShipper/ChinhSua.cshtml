@model DoAnChuyenNganh.Models.Shipper
@{
    ViewBag.Title = "Chỉnh Sửa";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<h3 class="title1">Chỉnh sửa thông tin shipper @Model.HoTen</h3>
<div class="form-three widget-shadow">
    @using (Html.BeginForm("ChinhSua", "QuanLyShipper", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("MaShipper", Model.MaShipper);
        <div class="form-group">
            <label for="focusedinput" class="col-sm-2 control-label">Họ tên</label>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên họ tên" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="focusedinput" class="col-sm-2 control-label">Số điện thoại</label>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập số điện thoại" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <label for="focusedinput" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập số điện thoại" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <button type="submit" class="btn btn-default">Chỉnh sửa</button>
    }
</div>
<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

