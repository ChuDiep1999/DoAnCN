@model DoAnChuyenNganh.Models.Shipper
@{
    ViewBag.Title = "Xoa";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<h2>Xoa</h2>

<h3 class="title1">Xóa Shipper</h3>
<h4 class="text-danger">Bạn có chắc chắn xóa shipper này chứ?</h4>
<br />
<div class="blank-page widget-shadow scroll" id="style-2 div1">
    <h4>Thông tin shipper</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã Shipper
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaShipper)
        </dd>

        <dt>
            Tên Shipper
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Ca Làm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CaLam.CaLam1)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    }
    <h4 class="text-danger">@ViewBag.ThongbaoxoaShipper</h4>
</div>
