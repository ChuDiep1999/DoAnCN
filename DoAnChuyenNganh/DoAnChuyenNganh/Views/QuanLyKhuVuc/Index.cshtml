@using DoAnChuyenNganh.Models;
@model IEnumerable<KhuVuc>
@{
    ViewBag.Title = "Danh sách khu vực";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}

<h2 class="title1">Danh sách khu vực</h2>
@Html.ActionLink("Thêm Khu Vực", "ThemKhuVuc", null, new { @style = "background-color: aqua;", @class = "btn btn-sucess" })
<br />
<br />
@*Thể hiện dữ liệu thông qua control Webgrid*@
@grid.GetHtml(
         tableStyle: "divTable",
         headerStyle: "gridHead",
         footerStyle: "gridFooter",
         rowStyle: "gridRow",
         alternatingRowStyle: "gridAltRow",
         columns: grid.Columns(
            grid.Column("MaKhuVuc", "Mã Khu Vực"),
            grid.Column("TenKhuVuc", "Tên Khu Vực"),
            grid.Column("DienTich", "Diện tích"),
            grid.Column(format: p => Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.MaKhuVuc })),
            grid.Column(format: p => Html.ActionLink("Xóa", "Xoa", new { id = p.MaKhuVuc }))
            ))
<style>
    .divTable {
        border: 1px solid #999999;
        width: 100%;
    }

        .divTable td {
            border: 1px solid #999999;
        }

    .gridHead {
        background-color: Green;
    }

        .gridHead > th > a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
    }
