<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Active Login form Responsive Widget Template :: W3layouts</title>
    <!-- Meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- //Meta tags -->
    <link rel="stylesheet" href="~/Content/LoginLayout/css/style.css" type="text/css" media="all" /><!-- Style-CSS -->
    <link href="~/Content/LoginLayout/css/font-awesome.css" rel="stylesheet"><!-- font-awesome-icons -->
</head>

<body>
    <section class="w3l-form-36">
        <div class="form-36-mian section-gap">
            <div class="wrapper">
                <div class="form-inner-cont">
                    <h3>Đăng nhập ngay</h3>
                    @using (Html.BeginForm("DangNhap","Home"))
                    {
                        <div class="form-input">
                            <span class="fa fa-envelope-o" aria-hidden="true"></span> <input type="text" name="txtTenDangNhap"
                                                                                             placeholder="Tên Đăng nhập" required />
                        </div>
                        <div class="form-input">
                            <span class="fa fa-key" aria-hidden="true"></span> <input type="password" name="txtMatKhau" placeholder="Mật khẩu"
                                                                                      required />
                        </div>
                        <div class="login-remember d-grid">
                            <label class="check-remaind">
                                <input type="checkbox">
                                <span class="checkmark"></span>
                                <p class="remember">Remember me</p>
                            </label>
                            <button class="btn theme-button" id="btnDangNhap1">Đăng nhập</button>
                        </div>
                        <div>
                            <h5 style="font-weight:bold;color:red;">@ViewBag.ThongBaoDangNhap</h5>
                        </div>
                        <div class="new-signup">
                            <a href="#reload" class="signuplink">Quên mật khẩu ?</a>
                        </div>
                    }
                    <div class="social-icons">
                        <p class="continue"><span>Or</span></p>
                        <div class="social-login">
                            <a href="#facebook">
                                <div class="facebook">
                                    <span class="fa fa-facebook" aria-hidden="true"></span>

                                </div>
                            </a>
                            <a href="#google">
                                <div class="google">
                                    <span class="fa fa-google-plus" aria-hidden="true"></span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <p class="signup">Bạn chưa có tài khoản? <a href="@Url.Action("DangKy")" class="signuplink">Đăng ký ngay</a></p>
                </div>

                <!-- copyright -->
                <div class="copy-right">
                    <p>
                        © 2020 GiaoHang. All rights reserved | Design by <a href="http://w3layouts.com/"
                                                                                     target="_blank">W3Layouts</a>
                    </p>
                </div>
                <!-- //copyright -->
            </div>
        </div>
    </section>
</body>

</html>
<script type="text/javascript">
    $("#btnDangNhap").click(function () {
        $("#popup_login").show();
    });
    $("#close-form").click(Anform);
    function Anform() {
        $("#popup_login").hide();
    }
    $("#btnDangNhap1").click(function () {
        var TaiKhoan = $(".TaiKhoan").val();
        var MatKhau = $(".Mật khẩu").val();

        if (TaiKhoan == "") {
            alert("Lỗi");
            return;
        }
    });
</script>
