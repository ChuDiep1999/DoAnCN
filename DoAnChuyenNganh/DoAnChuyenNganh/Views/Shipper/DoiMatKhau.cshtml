@model DoAnChuyenNganh.Models.Shipper
@{
    ViewBag.Title = "Đổi mật khẩu Shipper";
    Layout = "~/Views/Layout/_ShipperLayout.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            Đổi mật khẩu
        </header>
        <div class="panel-body">
            <div class="position-center">
                @using (Html.BeginForm("DoiMatKhau", "Shipper", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("MaShipper", Model.MaShipper);
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mật khẩu cũ</label>
                        @Html.EditorFor(model => model.MatKhauCu, new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder = "Nhập họ tên" } })
                        <p class="text-danger">@ViewBag.MatKhauCuShipper</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mật khẩu mới</label>
                        @Html.EditorFor(model => model.MatKhauMoi, new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder = " Nhập số điện thoại" } })
                        <p class="text-danger">@ViewBag.MatKhauMoiShipper</p>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Nhập lại mật khẩu mới</label>
                        @Html.EditorFor(model => model.NhapLaiMatKhauMoi, new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder = " Nhập Email" } })
                        <p class="text-danger">@ViewBag.NhapLaiMatKhauShipper</p>
                    </div> 
                    <button type="submit" class="btn btn-info">Đổi mật khẩu</button>
                }


            </div>

        </div>
    </section>

</div>

